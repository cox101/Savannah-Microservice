# Django Settings
SECRET_KEY={{ secret_key }}
DEBUG={{ debug }}
ALLOWED_HOSTS={{ allowed_hosts }}

# Database
DATABASE_URL=postgresql://{{ db_user }}:{{ db_password }}@localhost:5432/{{ db_name }}

# Redis
REDIS_URL=redis://localhost:6379/0

# Africa's Talking SMS API
AFRICAS_TALKING_USERNAME={{ africastalking_username }}
AFRICAS_TALKING_API_KEY={{ africastalking_api_key }}
AFRICAS_TALKING_SENDER_ID={{ africastalking_sender_id }}

# CORS Settings
CORS_ALLOWED_ORIGINS=http://{{ inventory_hostname }},https://{{ inventory_hostname }}
